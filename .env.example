# CC-Launcher Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PROXY SETTINGS
# =============================================================================

# Port for the proxy server to listen on
PROXY_PORT=5000

# Access token for authenticating requests to the proxy
# Leave empty to auto-generate a random token on startup
PROXY_ACCESS_TOKEN=

# =============================================================================
# TARGET ENDPOINT
# =============================================================================

# The LLM endpoint to forward requests to
# For RBC: https://internal-llm.rbc.com/v1
# For testing with OpenAI: https://api.openai.com/v1
TARGET_ENDPOINT=https://api.openai.com/v1

# Set to true to return mock responses without forwarding to target
USE_PLACEHOLDER_MODE=false

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Option 1: OAuth 2.0 (for RBC internal endpoint)
# Leave all empty to skip OAuth
OAUTH_TOKEN_ENDPOINT=
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_SCOPE=

# Option 2: Direct API Key (for testing with OpenAI/Anthropic)
# Used when OAuth is not configured
TARGET_API_KEY=

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Map Claude Code model names to your internal endpoint model names
# Format: incoming-model=target-model,incoming-model2=target-model2
#
# Claude Code sends these model names (check with /model command):
#   - claude-sonnet-4-5-20250514 (Sonnet 4.5)
#   - claude-opus-4-20250514 (Opus 4)
#   - claude-sonnet-4-20250514 (Sonnet 4)
#
# Example for RBC (adjust to your endpoint's model names):
MODEL_MAPPING=claude-sonnet-4-5-20250514=sonnet-4.5,claude-opus-4-20250514=opus-4.1

# Default max tokens to inject if client doesn't specify
# Critical: RBC endpoint defaults to 400 if not specified!
DEFAULT_MAX_TOKENS=16384

# =============================================================================
# BEHAVIOR
# =============================================================================

# Skip OAuth and use mock authentication (for development)
DEV_MODE=false

# Skip SSL certificate verification
# Auto-enabled if rbc_security is not available
SKIP_SSL_VERIFY=false

# Automatically open the dashboard in browser on startup
AUTO_OPEN_BROWSER=true
